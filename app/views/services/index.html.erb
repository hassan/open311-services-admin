<p id="notice"><%= notice %></p>

<h1>Listing Services</h1>

<table>
  <thead>
    <tr>
      <th>Service code</th>
      <th>Service name</th>
      <th>Service type</th>
      <th>Description</th>
      <th>Metadata</th>
      <th>Keywords</th>
      <th>Group</th>
      <th>Jurisdiction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.service_code %></td>
        <td><%= service.service_name %></td>
        <td><%= service.service_type %></td>
        <td><%= service.description %></td>
        <td><%= service.metadata %></td>
        <td><%= service.keywords %></td>
        <td><%= service.group %></td>
        <td><%= service.jurisdiction_id %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

